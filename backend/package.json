{
  "name": "react-hono-rpc-backend",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "wrangler dev",
    "test": "vitest",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply hono-rest-template-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply hono-rest-template-db --env production --remote",
    "db:seed:local": "wrangler d1 execute hono-rest-template-db --local --file=./seed/seed.sql",
    "deploy:prod": "wrangler deploy --env production --minify"
  },
  "dependencies": {
    "hono": "^4.11.3",
    "@hono/zod-validator": "^0.4.2",
    "zod": "^3.24.1",
    "drizzle-orm": "^0.38.4"
  },
  "devDependencies": {
    "wrangler": "^4.4.0",
    "vitest": "^2.1.8",
    "@cloudflare/vitest-pool-workers": "^0.6.4",
    "drizzle-kit": "^0.30.4",
    "@types/node": "^22.10.7",
    "typescript": "^5.7.3",
    "@cloudflare/workers-types": "^4.20250109.0"
  }
}
